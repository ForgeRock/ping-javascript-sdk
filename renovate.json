{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "npm": {
    "fileMatch": ["(^|/)(package\\.json)$"]
  },
  "ignoreDeps": [
    "@nrwl/*",
    "@nx/*",
    "typescript",
    "swc-loader",
    "@swc/helpers"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "schedule": ["at 2:00am on Monday"]
    }
  ]
}
