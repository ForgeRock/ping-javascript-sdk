{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "include": ["**/*.ts"],
  "compilerOptions": {
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2024",
    "strict": true,
    "plugins": [
      {
        "name": "@effect/language-service",
        "transform": "@effect/language-service/transform"
      }
    ]
  },
  "nx": {
    "addTypecheckTarget": false
  }
}
